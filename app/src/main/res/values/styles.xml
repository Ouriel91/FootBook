<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ProfileFrag_TextView" >
        <item name="android:lines">1</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/grayTextColor</item>
        <item name="android:gravity">center_vertical|start</item>
    </style>

    <style name="GroupFrag_ImageView">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>


    </style>

    <style name="ProfileFrag_SmallImageView">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginStart">5dp</item>
    </style>

    <style name="GroupFrag_SmallImageView">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginStart">5dp</item>
    </style>

    <style name="GroupFrag_MemberTitleImage">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>

    </style>
    <style name="Title_TextView">
        <item name="android:lines">1</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/grayTextColor</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_linear</item>
        <item name="android:padding">3dp</item>

    </style>

    <style name="Login_Dialog_TextLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:background">@android:color/transparent</item>-->
        <item name="android:paddingStart">40dp</item>
        <item name="android:paddingEnd">40dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Login_Dialog_Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginHorizontal">100dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Login_Dialog_EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:background">@android:color/transparent</item>-->
        <item name="android:paddingStart">40dp</item>
        <item name="android:paddingEnd">40dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
