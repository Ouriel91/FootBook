<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#2F1D347E"/>
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item
        android:left="1dp"
        android:right="1dp"
        android:top="1dp"
        android:bottom="1dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" >

            <stroke
                android:width="2dp"
                android:color="@color/linear_border"
                />
            <corners
                android:radius="5dp"
                />
            <gradient
                android:angle="135"
                android:endColor="@color/linear_end"
                android:startColor="@color/linear_start"
                android:centerColor="@color/linear_center"
                android:type="linear"/>

        </shape>
    </item>
</layer-list>