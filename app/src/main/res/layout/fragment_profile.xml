<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">
    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/thumbnail_prof_frag"
        android:src="@drawable/thumbnail"/>

    <TextView
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/thumbnail_prof_frag"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/name_tv_prof_frag"
        android:layout_toEndOf="@id/thumbnail_prof_frag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Oriel Ohayun"
        android:textColor="@color/primaryTextView"
        android:textStyle="bold"
        style="@style/ProfileFrag_TextView"/>

    <ImageView
        app:layout_constraintTop_toTopOf="@id/region_tv_prof_frag"
        app:layout_constraintStart_toEndOf="@id/thumbnail_prof_frag"
        app:layout_constraintEnd_toStartOf="@id/region_tv_prof_frag"
        app:layout_constraintBottom_toBottomOf="@id/region_tv_prof_frag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/region_ic_prof_frag"
        android:src="@android:drawable/ic_menu_mylocation"/>

    <TextView
        android:id="@+id/region_tv_prof_frag"
        app:layout_constraintStart_toEndOf="@id/region_ic_prof_frag"
        app:layout_constraintTop_toBottomOf="@id/name_tv_prof_frag"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Where from?"
        android:lines="1"
        style="@style/ProfileFrag_TextView"/>

    <ImageView
        app:layout_constraintTop_toBottomOf="@id/region_ic_prof_frag"
        app:layout_constraintStart_toEndOf="@id/thumbnail_prof_frag"
        app:layout_constraintEnd_toStartOf="@id/position_tv_prof_frag"
        app:layout_constraintBottom_toBottomOf="@id/thumbnail_prof_frag"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/position_ic_prof_frag"
        android:src="@drawable/defender"/>

    <TextView
        android:layout_marginTop="0dp"
        android:id="@+id/position_tv_prof_frag"
        app:layout_constraintStart_toEndOf="@id/position_ic_prof_frag"
        app:layout_constraintTop_toTopOf="@id/position_ic_prof_frag"
        app:layout_constraintBottom_toBottomOf="@id/position_ic_prof_frag"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:text="Defender"
        style="@style/ProfileFrag_TextView"/>

    <ImageView
        android:id="@+id/pitch_ic_prof_frag"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/thumbnail_prof_frag"
        app:layout_constraintTop_toBottomOf="@id/thumbnail_prof_frag"
        android:src="@drawable/footballfield"
        />

    <TextView
        android:layout_marginTop="0dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/pitch_ic_prof_frag"
        app:layout_constraintBottom_toBottomOf="@id/pitch_ic_prof_frag"
        app:layout_constraintStart_toEndOf="@id/pitch_ic_prof_frag"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/pitch_tv_prof_frag"
        android:text="Preferred Pitch :"
        style="@style/ProfileFrag_TextView"
        />
    <Spinner
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/pitch_tv_prof_frag"
        app:layout_constraintBottom_toBottomOf="@id/pitch_tv_prof_frag"
        app:layout_constraintStart_toEndOf="@id/pitch_tv_prof_frag"
        android:id="@+id/pitch_spin_prof_frag"
        android:layout_width="0dp"
        android:layout_height="0dp"
        />

    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/pref_region_ic_prof_frag"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/where"
        app:layout_constraintStart_toStartOf="@id/thumbnail_prof_frag"
        app:layout_constraintTop_toBottomOf="@id/pitch_ic_prof_frag"
        tools:layout_editor_absoluteY="250dp" />

    <TextView
        android:layout_marginTop="0dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/pref_region_ic_prof_frag"
        app:layout_constraintBottom_toBottomOf="@id/pref_region_ic_prof_frag"
        app:layout_constraintStart_toEndOf="@id/pref_region_ic_prof_frag"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/pref_region_tv_prof_frag"
        android:text="Preferred Region :"
        style="@style/ProfileFrag_TextView"
        />
    <Spinner
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/pref_region_tv_prof_frag"
        app:layout_constraintBottom_toBottomOf="@id/pref_region_tv_prof_frag"
        app:layout_constraintStart_toEndOf="@id/pref_region_tv_prof_frag"
        android:id="@+id/pref_region_spin_prof_frag"
        android:layout_width="0dp"
        android:layout_height="0dp"
        />

    <TextView
        android:id="@+id/groups_title_prof_frag"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/pref_region_ic_prof_frag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ProfileFrag_TextView"
        android:text="@string/member_in_groups"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/groups_title_prof_frag"
        app:layout_constraintBottom_toBottomOf="parent"
        />










</android.support.constraint.ConstraintLayout>


