<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:contentPadding="10dp"
    app:elevation="8dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/tranparent_back"
    android:animateLayoutChanges="true"
    >
<TextView
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:visibility="invisible"
    android:id="@+id/id_group_card"/>
    <ImageView
        android:scaleType="fitCenter"
        android:id="@+id/team_avatar_group_card"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/team_avatar"
        android:layout_gravity="start|center_vertical"
        android:layout_marginEnd="10dp"
        android:background="@color/appbar_background"/>
    <TextView
        android:layout_marginStart="90dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:lines="1"
        android:text="@string/team_name"
        android:id="@+id/name_group_card" />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/calendar"
        android:layout_marginStart="90dp"
        android:layout_marginTop="45dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:textSize="15sp"
        android:lines="1"
        android:text="@string/next_game_date"
        android:layout_marginTop="45dp"
        android:layout_marginStart="125dp"
        android:id="@+id/date_group_card"/>



</android.support.v7.widget.CardView>