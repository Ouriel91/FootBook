<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:contentPadding="10dp"
    app:elevation="8dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/tranparent_back"
    android:animateLayoutChanges="true">

    <ImageView
        android:id="@+id/avatar_player_member_card"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/player_avatar"
        android:layout_gravity="start|center_vertical"
        android:layout_marginEnd="10dp"
        android:background="@color/appbar_background"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/full_name"
        android:id="@+id/name_member_card"
        android:lines="1"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/playing"
        android:id="@+id/position_member_card"
        android:layout_marginStart="70dp"
        android:layout_marginTop="90dp"/>

</android.support.v7.widget.CardView>